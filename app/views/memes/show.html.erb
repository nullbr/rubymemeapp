<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center justify-content-around flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text">
                    <h3 class="dark-color"><%= @meme.name %></h3>
                    <h4 class="theme-color"><%= day_month(@meme) %> by <%= @meme.author %></h4>
                    <p><%= @meme.description %></p>
                    <div class="btn-bar">
                        <a class="px-btn theme" href="#">Download</a>
                        <a class="px-btn theme" href=<%= edit_meme_path %>>Edit</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 text-center">
                <div class="about-img">
                    <img src=<%= @meme.image_url %> title="" alt="">
                </div>
            </div>
        </div>
    </div>
</section>