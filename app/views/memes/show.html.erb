<div class="container">
    <div class="row align-items-center justify-content-around flex-row-reverse">
        <div class="col-lg-6">
            <div class="about-text">
                <h3 class="dark-color"><%= @meme.name %></h3>
                <h4 class="theme-color"><%= day_month(@meme) %> by <%= @meme.author %></h4>
                <p><%= @meme.description %></p>
                <div class="btn-bar">
                    <a class="px-btn theme" href=<%= image_url(@meme.image_file_name) %> download=<%= @meme.name %>>Download</a>
                    <a class="px-btn theme" href=<%= edit_meme_path %>>Edit</a>
                    <%= link_to "Delete", @meme, method: :delete, data: { confirm: "Are you sure you want to delete this item?" }, class: "px-btn theme" %>
                </div>
            </div>
        </div>
        <div class="col-lg-5 text-center">
            <div class="about-img">
                <%= image_tag @meme.image_file_name %>
            </div>
        </div>
    </div>
</div>

