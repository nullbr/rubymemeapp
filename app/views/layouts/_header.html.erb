<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("rubylogo.png", size: "90x90"), root_path, id: "logo" %> <%= link_to "Ruby Memes", root_path, id: "logotxt" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "All Memes", memes_path %></li>
        <% if current_user %>
          <li><%= link_to current_user.name, edit_user_path(session[:user_id]) %></li>
          <li><%= link_to "Sign Out", session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Login", new_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>