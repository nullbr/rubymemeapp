<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to image_tag("rubylogo.png", size: "80x80"), root_path, id: "logo" %> <%= link_to "Ruby Memes", root_path, id: "logotxt" %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label">Memes</span> <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Latest", memes_path %></li>
                        <li><%= link_to "Oldest", filtered_memes_path('oldest') %></li>
                        <li><%= link_to "Image", filtered_memes_path('png_or_jpg') %></li>
                        <li><%= link_to "Gif", filtered_memes_path('gif') %></li>
                    </ul>
                </li>
                <% if current_user %>
                <li><%= link_to current_user.name, edit_user_path(session[:user_id]) %></li>
                <li><%= link_to "Sign Out", session_path, method: :delete %></li>
                <% else %>
                <li><%= link_to "Sign Up", signup_path %></li>
                <li><%= link_to "Login", new_session_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
    <script src='https://code.jquery.com/jquery-2.1.3.min.js'></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'></script>
    <script>
    $(function () {
        $('.dropdown-toggle').dropdown();
    }); 
    </script>
</header>