<div class="container">
    <div class="about-text">
        <h3><%= @user.name %></h1>
        <h4><%= mail_to(@user.email) %></h2>
        <% if current_user?(@user) %>
            <div class="btn-bar">
                <%= link_to "Edit User", edit_user_path, class: "btn btn-primary" %>
                <%= link_to "Delete", @event, method: :delete, 
                    data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-primary" 
                %>
            </div>
        <% end %>
    </div>
</div>