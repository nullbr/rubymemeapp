<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center justify-content-around flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text">
                    <h3 class="dark-color"><%= @rubymemes.name %></h3>
                    <h4 class="theme-color"><%= day_month(@rubymemes) %> by <%= @rubymemes.author %></h4>
                    <p><%= @rubymemes.description %></p>
                    <div class="btn-bar">
                        <a class="px-btn theme" href="#">Download</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 text-center">
                <div class="about-img">
                    <%= image_tag("avatar1.png") %>
                </div>
            </div>
        </div>
    </div>
</section>